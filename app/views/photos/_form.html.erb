<%= form_for [:profile, @photo], :html => {:multipart => true} do |f| %>
	<% if @photo.errors.any? %>
		<div id="errors_explanation">
			<h2><%= pluralize(@photo.erors.count, "errors") %> stopped your photo from being saved</h2>
			<ul>
				<% @photo.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<p>
		<%= f.label :file %><br>
		<%= f.file_field :screenshot, :required =>true %>
	</p>
	<p>
		<%= f.hidden_field :profile_id, :required =>true %>
	</p>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title, :required =>true %>
	</p>
	<p>
		<%= f.label :url %><br>
		<%= f.text_field :url, :required =>true %>
	</p>
	<p>
		<%= f.label :summary %><br>
		<%= f.text_area :summary, :required =>true %>
	</p>
	
	<p>
		<%= f.submit %>
	</p>
<% end %>