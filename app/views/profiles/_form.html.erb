<%= form_for @profile, :profile, :html => { :multipart => true } do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
	<%= f.label :nickname %><br />
    <%= f.text_field :nickname  %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

<div class="field">
		<p>Street: <%= f.text_field :street %></p>
		<p>Locality: <%= f.text_field :locality %></p>
		<p>City: <%= f.text_field :city %></p>
		<p>County: <%= f.text_field :region %></p>
		<p>Post code: <%= f.text_field :postcode %></p>
		<p>Country: <%= f.text_field :country %></p>
</div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.number_field :phone %>
  </div>
  <div class="field">
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </div>

  <div class="field">
	<%= f.label :avatar %><br />
    <%= f.file_field :avatar  %>
  </div>
  <div class="field">
	<%= f.label :email, "Email" %><br />
    <%= f.email_field :email  %>
  </div>
  <div class="field">
	<%= f.label :latitude %><br />
    <%= f.number_field :latitude  %>
  </div>
  <div class="field">
	<%= f.label :longitude %><br />
    <%= f.number_field :longitude  %>
  </div>
  <div class="field">
    <%= f.label :summary, "Who are you in this field?" %><br />
    <%= f.text_area :summary %>
  </div>
  <div class="field">
    <%= f.label :scratch, "Where and how have you scratched the itch?" %><br />
    <%= f.text_area :scratch %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
